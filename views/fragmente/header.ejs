
<script>
document.addEventListener('DOMContentLoaded', () => {
    const root = document.documentElement;
    const savedTheme = localStorage.getItem('tema') || 'light';
    

    function aplicaTema(tema) {
    // È˜tergem toate clasele de temÄƒ
    document.body.classList.remove('tema-light', 'tema-dark', 'tema-primary');
    
    // AplicÄƒm clasa corespunzÄƒtoare
    document.body.classList.add(`tema-${tema}`);
    
    // ActualizÄƒm atributul data-bs-theme doar pentru dark mode
    if(tema === 'dark') {
        document.documentElement.setAttribute('data-bs-theme', 'dark');
    } else {
        document.documentElement.removeAttribute('data-bs-theme');
    }
    
    // ForÈ›Äƒm update la componentele Bootstrap
    document.querySelectorAll('[data-bs-theme]').forEach(el => {
        el.setAttribute('data-bs-theme', tema === 'dark' ? 'dark' : 'light');
    });
    
    localStorage.setItem('tema', tema);
}

    // IniÈ›ializare temÄƒ salvatÄƒ
    aplicaTema(savedTheme);

    document.querySelectorAll('[data-tema]').forEach(btn => {
        btn.addEventListener('click', (e) => {
            e.preventDefault();
            aplicaTema(e.target.dataset.tema);
        });
    });
});
  </script>

